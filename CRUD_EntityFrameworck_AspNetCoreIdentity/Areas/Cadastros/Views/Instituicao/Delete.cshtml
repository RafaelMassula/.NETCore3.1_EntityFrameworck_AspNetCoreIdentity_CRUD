@model Modelo.Cadastros.Instituicao

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutIES";
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/font-awesome.min.css" asp-fallback-href="~/lib/font-awesome/css/all.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}
<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">
        Deletar instituição
    </div>
    @{ await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Instituicao/_PartialDetailsContentCard.cshtml", Model);}

    <div class="card-footer bg-info text-center text-white">
        <form asp-action="Delete">
            @Html.HiddenFor(i => i.InstituicaoId)
            <input type="hidden" asp-for="InstituicaoId" />
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-light">Voltar à listagem</a>
        </form>
    </div>
</div>
@section ScriptPage{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}