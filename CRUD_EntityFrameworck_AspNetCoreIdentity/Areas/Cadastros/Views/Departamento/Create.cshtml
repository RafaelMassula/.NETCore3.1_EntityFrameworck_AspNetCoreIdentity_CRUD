@model Modelo.Cadastros.Departamento

@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Create";
}

<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">
        Registrar um novo departamento 
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstituicaoId" class="control-label"></label>
            <select asp-for="InstituicaoId" class="form-control" asp-items="@(new SelectList(@ViewBag.Instituicoes, "InstituicaoId", "Nome"))"><option value="">Selecione uma instituição</option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar Departamento" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>
<div class="card-footer bg-dark text-center text-white">
    <a asp-action="Index" class="btn btn-info">Retornar à listagem de departamentos</a>
</div>

@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
