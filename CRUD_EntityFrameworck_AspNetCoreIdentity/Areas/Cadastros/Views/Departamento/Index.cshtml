@model IEnumerable<Modelo.Cadastros.Departamento>

@{
    Layout = "_LayoutIES";
    ViewData["Title"] = "Index";
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="card-block">
    <div class="card-header text-white text-center bg-primary h1">
        Departamentos Registrados
    </div>
    <div class="card-body">
        <table id="tabela_departamentos" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instituicao)
                    </th>
                    <th id="th">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instituicao.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.DepartamentoId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.DepartamentoId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.DepartamentoId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">Criar um novo departamento</a>
    </div>
</div>
@section ScriptPage{
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_departamentos').dataTable({
                "order": [[1, "asc"]],
            });
        });
    </script>
}